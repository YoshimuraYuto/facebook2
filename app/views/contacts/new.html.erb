<header>
  <div class="container">
    <div class="header-title">
      <div id="top-btn" class="header-logo">人生</div>
    </div>
    <div class="header-menu">
      <ul class="header-menu-right">

        <li>
          <!-- <a href="#contact/index">お問い合わせ</a> -->
          <%= link_to 'contact/index', @contact %>

        </li>
      </ul>
    </div>
  </div>
</header>
<%= form_with(model: @contact, local: true) do |form| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>



<div id="contact" class="contact-section gray-section">
  <div class="contact-section-inner">
    <div class="container">
      <div class="section-title">
        <h3>お問い合わせ</h3>
      </div>
      <div class="contact-form">
        <h4>メッセージを送る</h4>

          <!-- <div class="error-message"></div>
          <input type="text" name="name" placeholder="お名前" class="contact-name">
          <div class="error-message"></div>
          <input type="text" name="email" placeholder="メールアドレス" class="contact-email"> -->

        <%= form_with(model: @contact, local: true) do |form| %>
          <!-- <div class="error-message"></div>
          <textarea name="message" placeholder="メッセージ内容"></textarea> -->
          <div class="contact_name">
            <%= form.label :name %>
            <%= form.text_field :name %>
          </div>
          <div class="contact_name">
            <%= form.label :email %>
            <%= form.text_field :email %>
          </div>
          <div class="contact_title">
            <%= form.label :title %>
            <%= form.text_field :title %>
          </div>
          <div class="contact_title">
            <!-- <textarea name="message" placeholder="メッセージ内容"></textarea> -->

            <%= form.label :content %>
            <%= form.text_field :content %>
          </div>

          <%= form.submit "おはよう", class: "btn btn-contact"%>
        <% end %>

      </div>

    </div>
  </div>
</div>
